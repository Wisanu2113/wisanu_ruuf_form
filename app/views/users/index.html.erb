<section class="container-table">
      <div class="row-container">
          <h1>Users List</h1>
      <%= link_to 'Add New User', new_user_path, class: 'btn-add-user' %>
    </div>

  <table>
    <thead>
      <tr>
        <th class="fn">First Name</th>
        <th>Last Name</th>
        <th>Birthday</th>
        <th>Gender</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Subject</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="fn"><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.birthday %></td>
          <td><%= user.gender %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.subject %></td>
          <td>
            <div class="button-table">
            <%= link_to 'Edit', edit_user_path(user), class: 'btn-edit' %>
            <%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-delete' %>
            </div>
          </td>
        </tr> 
      <% end %>
    </tbody>
  </table>

</section>
