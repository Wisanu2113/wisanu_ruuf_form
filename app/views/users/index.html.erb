<h1>User List</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Birthday</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Subject</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.birthday %></td>
        <td><%= user.gender %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.subject %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %>
          <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New User', new_user_path, class: 'btn btn-success' %>
