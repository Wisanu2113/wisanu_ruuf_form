<section class="container-form">
  
<% flash.each do |flash_type, message| %>
   <% if message == "true" %>
  <div id="myModal" class="modal" style="display: block; position: fixed; z-index: 1; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgba(0,0,0,0.4);">
    <div class="modal-content" style="background-color: #fefefe; margin: 15% auto; padding: 20px; border: 1px solid #888; width: 80%; text-align: center;">
      <span class="close" style="color: #aaa; float: right; font-size: 28px; font-weight: bold;">&times;</span>
      <p>Successfully</p>
       <%= link_to 'Back to Users List', users_path, class: 'submit-button' %>
      
    </div>
  </div>
<% end %>
  <% end
  

<%= form_with model: @user, url: users_path do |f| %>
  <h1 id="register">Register Form</h1>

  <div class="container-field">
  
      <div class="first-name">
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name, required: true %>
      </div>
      <div class='spacser'></div>
      <div class="last-name">
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name, required: true %>
      </div>
   </div>

  <div class="container-field">
     <div class="birthday">
        <%= f.label :birthday, "Birthday" %>
        <%= f.date_field :birthday, required: true ,class: "custom-date-field" %>
      </div>
      <div class='spacser'></div>
      <div class="gender">
        <%= f.label :gender, "Gender" %>
          <div class="row-container-gender">
               <%= f.radio_button :gender, 'Male',required: true , class: "gender-radio" %>
              <%= f.label :gender_male, "Male" , class: "gender-label"%>
               <div class='spacser'></div>
              <%= f.radio_button :gender, 'Female',required: true , class: "gender-radio"  %>
              <%= f.label :gender_female, "Female", class: "gender-label" %>
          </div>
      </div>
  </div>

  <div class="container-field">
    <div class="email">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, required: true %>
    </div>
    <div class='spacser'></div>
    <div  class="phone">
      <%= f.label :phone, "Phone Number" %>
      <%= f.telephone_field :phone, required: true %>
    </div>
  </div>
  <div class="container-field">
    <div class="subject">
      <%= f.label :subject, "Subject" %>
      <%= f.select :subject, [['Math', 'Math'], ['Science', 'Science'], ['History', 'History']], prompt: 'Choose option', required: true, class: "custom-select" %>
    </div>
  </div>

 <div class="box-bnt">
 <%= f.submit "Submit", class: "submit-button" %>
 <%= link_to 'View Users', users_path, class: 'btn-view-users' %>
 </div>

<% end %>
</section>

