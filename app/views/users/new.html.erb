<section class="container-form">
<%= form_with model: @user, url: users_path do |f| %>
  <h1 id="register">Register Form</h1>
  <% flash.each do |flash_type, message| %>
   <div class="flash_message"> 
      <%= message %>
   </div>
  <% end %>

  <div class="container-field">
  
      <div class="first-name">
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name, required: true %>
      </div>
      <div class='spacser'></div>
      <div class="last-name">
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name, required: true %>
      </div>
   </div>

  <div class="container-field">
     <div class="birthday">
        <%= f.label :birthday, "Birthday" %>
        <%= f.date_field :birthday, required: true ,class: "custom-date-field" %>
      </div>
      <div class='spacser'></div>
      <div class="gender">
        <%= f.label :gender, "Gender" %>
          <div class="row-container-gender">
               <%= f.radio_button :gender, 'Male',required: true , class: "gender-radio" %>
              <%= f.label :gender_male, "Male" , class: "gender-label"%>
               <div class='spacser'></div>
              <%= f.radio_button :gender, 'Female',required: true , class: "gender-radio"  %>
              <%= f.label :gender_female, "Female", class: "gender-label" %>
          </div>
      </div>
  </div>

  <div class="container-field">
    <div class="email">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, required: true %>
    </div>
    <div class='spacser'></div>
    <div  class="phone">
      <%= f.label :phone, "Phone Number" %>
      <%= f.telephone_field :phone, required: true %>
    </div>
  </div>
  <div class="container-field">
    <div class="subject">
      <%= f.label :subject, "Subject" %>
      <%= f.select :subject, [['Math', 'Math'], ['Science', 'Science'], ['History', 'History']], prompt: 'Choose option', required: true, class: "custom-select" %>
    </div>
  </div>

 <div class="box-bnt">
 <%= f.submit "Submit", class: "submit-button" %>
 <%= link_to 'View Users', users_path, class: 'btn-view-users' %>
 </div>

<% end %>
</section>
